<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_margin="5px"
		android:id="@+id/ItemTaxPayerImage"/>
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#000000"
			android:textSize="24px" 
			android:id="@+id/itemContent" />		
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000"
			android:textSize="18px" android:id="@+id/itemTitle" />

		<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
			<TextView android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:textColor="#000000"
				android:textSize="18px" android:id="@+id/djzt" />
			<TextView android:layout_width="wrap_content" android:layout_marginLeft="10dip"
				android:layout_height="wrap_content" android:textColor="#000000"
				android:textSize="18px" android:id="@+id/sbqk" />
		</LinearLayout>		
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#000000"
				android:visibility="gone"
			android:textSize="15px" android:id="@+id/nsrnbm" />
	</LinearLayout>
</LinearLayout>