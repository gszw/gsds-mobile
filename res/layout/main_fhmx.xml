<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
       <RelativeLayout
         android:id="@+id/fhmx_topsousuo"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/shape_juxing_white"
         android:layout_marginTop="70dp"
         android:gravity="center_vertical"
         android:layout_below="@id/bt_Radio"> 
         

            <TextView android:id="@+id/bt_Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_juxing_gray"
                android:layout_margin="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textColor="@color/c2black"
                android:drawableLeft="@drawable/bt_ss"
                android:text="名 称"/>

				<EditText
				android:id="@+id/tv_tj"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:stretchColumns="true"
				android:background="@null"
				android:textSize="13sp"
				android:hint="!请输入关键字"
				android:layout_toRightOf="@id/bt_Radio"
				android:layout_alignBaseline="@id/bt_Radio"
				android:singleLine="true"
				/>
				
				<Button android:id="@+id/button2"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_gravity="top"
				android:background="@drawable/sousuo"
				android:layout_alignBaseline="@id/bt_Radio"
				android:layout_alignParentRight="true"

		/>  
           
           </RelativeLayout>
    <LinearLayout 
        android:id="@+id/mainlinear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        
        
    </LinearLayout>

		<ListView
		    android:id="@+id/PayerListView"
		    android:layout_width="wrap_content"
		    android:layout_height="130dp"
		    android:layout_above="@+id/fenye_layout"
		    android:layout_below="@id/fhmx_topsousuo"
		    android:cacheColorHint="#FFF4F4F4"
		    android:dividerHeight="0.0dip"
		    android:fadingEdge="none" />
		
	    <LinearLayout
	        android:id="@+id/fenye_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPageFirst"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/select_btn_fhmxfm01"
            android:padding="3dp"
            android:text="首 页" />
         <Button
            android:id="@+id/btnPagePrevious"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/select_btn_fhmxfm01"
            android:padding="3dp"
            android:text="上一页" />
         <TextView 
             android:id="@+id/txtPageInfo"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:gravity="bottom|center"
             android:layout_weight="2"
             android:background="@drawable/select_btn_fhmxfm01"
             android:padding="3dp"
             android:text="1/1"
             android:textSize="10sp"
             android:textColor="@color/c1white" />
         <Button
            android:id="@+id/btnPageNext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/select_btn_fhmxfm01"
            android:padding="3dp"
            android:text="下一页" />
        <Button
            android:id="@+id/btnPageLast"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/select_btn_fhmxfm01"
            android:padding="3dp"
            android:text="末 页" />
       </LinearLayout>

</RelativeLayout>